<Window x:Class="email_encrpt.Enter_Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:email_encrpt"
        mc:Ignorable="d"
        Title="Enter Password" Height="300" Width="300" Closed="Window_Closed" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize" Topmost="True">
    <Grid>
            <Label Name="label1" Content="Enter Key Password" Margin="0,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <PasswordBox Name="Pass" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" />
            <Button Name="done" Click="done_Click" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="20" Margin="81,172,152.6,84" IsDefault="True"/>
        <Button Name="Cancel" Click="Cancel_Click" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="20" Margin="154,172,79.6,84" IsDefault="True"/>

    </Grid>
</Window>
